                    <div class="cell unavalible"></div>
                </div>
                <div class="calendar-week-day">
                    <div class="cell unavalible"></div>
                    <div class="cell unavalible"></div>
                    <div class="cell unavalible"></div>
                </div>
            </div>

            <div class="wrap-line"></div>

            <div class="calendar-cells">
                <div class="calendar-time">
                    <div class="cell">
                        <span class="time">18:00</span><span class="divider">–</span><span class="time">18:30</span>
                    </div>
                    <div class="cell">
                        <span class="time">19:00</span><span class="divider">–</span><span class="time">19:30</span>
                    </div>
                    <div class="cell">
                        <span class="time">20:00</span><span class="divider">–</span><span class="time">20:30</span>
                    </div>
                </div>
                <div class="calendar-week-day">
                    <div class="cell"></div>
                    <div class="cell"></div>
                    <div class="cell"></div>
                </div>
                <div class="calendar-week-day">
                    <div class="cell"></div>
                    <div class="cell"></div>
                    <div class="cell"></div>
                </div>
                <div class="calendar-week-day">
                    <div class="cell"></div>
                    <div class="cell unavalible"></div>
                    <div class="cell"></div>
                </div>
                <div class="calendar-week-day">
                    <div class="cell"></div>
                    <div class="cell unavalible"></div>
                    <div class="cell unavalible"></div>
                </div>
                <div class="calendar-week-day">
                    <div class="cell unavalible"></div>
                    <div class="cell"></div>
                    <div class="cell"></div>
                </div>
                <div class="calendar-week-day">
                    <div class="cell unavalible"></div>
                    <div class="cell unavalible"></div>
