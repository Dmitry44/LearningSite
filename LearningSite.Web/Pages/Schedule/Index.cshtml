                    <div class="cell unavalible"></div>
                    <div class="cell unavalible"></div>
                    <div class="cell unavalible"></div>
                </div>
            </div>
        </div>

        <div class="d-flex flex-row align-items-start justify-content-between mt-4" id="selectedTimeBlock">

            <div class="final-set-time" id="finalSetTime">
            </div>

            <button type="button" class="btn-primary">
                Finish
            </button>

        </div>

        <div class="legend">
            <div class="item">
                <div class="circle"></div>
                <span>Availible</span>
            </div>
            <div class="item">
                <div class="circle unavalible"></div>
                <span>Unavalible</span>
            </div>
            <div class="item">
                <div class="circle booked"></div>
                <span>Booked by you</span>
            </div>
            <div class="item">
                <div class="circle selected"></div>
                <span>Selected</span>
            </div>
        </div>
    </div>
</section>
